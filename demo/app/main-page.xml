<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
  
  <GridLayout rows="*, auto, *">
    <Button row="1" text="Check keyboard state" tap="showKeyboardState" />
    
    <StackLayout row="2" horizontalAlignment="center" verticalAlignment="bottom" marginBottom="20">
      <Label text="Keyboard observer" />
      <TextField hint="Type something..." id="inputText" />
    </StackLayout>
  </GridLayout>
  
</Page>